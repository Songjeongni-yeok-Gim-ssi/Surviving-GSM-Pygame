import pygame
from pygame.locals import QUIT
from settings import *  # 설정 값 가져오기
from entity import Entity
from button import Button

class SelectPaper(Entity):
    
    '''
        title은 이벤트 제목, text는 이벤트 설명, buttons는 이벤트의 선택지들을 설정
    '''
    def __init__(self, imagePath, title, text, *buttons : Button, x = SCREEN_WIDTH / 2, y = SCREEN_HEIGHT / 2, width = SCREEN_WIDTH / 1.3, height = SCREEN_HEIGHT / 1.3, color = Color.WHITE):
        super().__init__(x, y, width, height, color)
        self.x = x
        self.y = y
        self.image = pygame.image.load(imagePath)
        self.image = pygame.transform.scale(self.image, (width / 1.1, height / 3))
        self.title = title
        self.text = text
        self.buttons = buttons
    
    def drawPaper(self):
        Button.screen.blit(self.image, (self.x, self.y / 2))
        
        
        for button in self.buttons:
            button.drawButton()